<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exam.uploadimage.MainActivity" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textv1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:id="@+id/seeBtn"
        android:text="浏览"
        android:layout_below="@+id/textv1"
        android:layout_centerHorizontal="true"
        android:background="#030303"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/uploadBtn"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/seeBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#030303"
        android:onClick="upload"
        android:text="上传文件"
        android:textColor="#ffffff" />
    
    <Button
    android:id="@+id/downloadBtn"
    android:layout_width="150dp"
    android:layout_height="30dp"
    android:background="#000000"
    android:text="下载文件"
    android:textColor="#ffffff"
    android:layout_below="@+id/uploadBtn"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/lookBtn"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="#000000"
        android:text="查看文件"
        android:textColor="#ffffff"
        android:layout_below="@+id/downloadBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />
    
    
</RelativeLayout>